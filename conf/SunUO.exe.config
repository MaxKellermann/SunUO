<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" 
      type="log4net.Config.Log4NetConfigurationSectionHandler,
            log4net-net-1.0" 
    />
  </configSections>

  <log4net>
    <!-- root logger -->

    <root>
      <level value="WARN"/>
      <appender-ref ref="MainLog" />
      <appender-ref ref="Console" />
    </root>

    <!-- custom loggers -->

    <logger name="Server">
      <level value="INFO"/>
    </logger>

    <logger name="Server.Accounting">
      <level value="INFO"/>
      <appender-ref ref="AccountLog" />
    </logger>

    <!-- appenders -->

    <appender name="Console"
      type="log4net.Appender.ConsoleAppender">

      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level %message%newline" />
      </layout>
    </appender>

    <appender name="MainLog"
      type="log4net.Appender.RollingFileAppender">

      <file value="var/log/main.log" />
      <appendToFile value="true" />
      <maxSizeRollBackups value="3" />
      <maximumFileSize value="1MB" />
      <rollingStyle value="Size" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level %logger [%ndc] - %message%newline" />
      </layout>
    </appender>

    <appender name="AccountLog"
      type="log4net.Appender.RollingFileAppender">

      <file value="var/log/account.log" />
      <appendToFile value="true" />
      <maxSizeRollBackups value="7" />
      <maximumFileSize value="1MB" />
      <rollingStyle value="Size" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level %logger [%ndc] - %message%newline" />
      </layout>
    </appender>

  </log4net>
</configuration>
